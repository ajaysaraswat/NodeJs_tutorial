<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>homepage</title>
</head>
<body>
    
     <%- include('./partials/nav') %>
    <% if (locals.user) { %>
        <div class="container mt-2">
            <div class="row row-cols-4">
            <% blogs.forEach(blog => { %>
                <div>
                <div class="card" style="width: 18rem;">
                    <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="..."  height="350px" width="200px">
                    <div class="card-body">
                      <h5 class="card-title"><%= blog.title %></h5>
                     </div> 
                    </div>
             
                    <div class="mb-3">
                        
                        <a class="btn btn-primary" href="/blog/<%= blog._id %>" role="button">View</a>
                     </div>
                  </div>
    
            <% }) %>
         </div> 
        </div>
    
    <% } %>
    
    <%- include('./partials/script') %>
</body>

</html>